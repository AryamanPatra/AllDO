<resources>
    <!-- Base application theme. -->
    <style name="Theme.AllDO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lc2</item>
        <item name="colorPrimaryVariant">@color/lc1</item>
        <item name="colorOnPrimary">@color/lc3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lc4</item>
        <item name="colorSecondaryVariant">@color/lc2</item>
        <item name="colorOnSecondary">@color/lc3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Light mode  -->
    <style name="SCREEN">
        <item name="android:background">@color/lc3</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/lc4</item>
    </style>
    <style name="FAB">
        <item name="android:backgroundTint">@color/lc1</item>
        <item name="android:tint">@color/lc3</item>
    </style>
    <style name="BOTTOMNAV">
        <item name="android:backgroundTint">@color/lc2</item>
    </style>
    <style name="TITLE">
        <item name="android:textColor">@color/lc4</item>
        <item name="android:shadowColor">@color/lc4</item>
    </style>
    <style name="NAV_MENU">
        <item name="android:tint">@color/lc4</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AllDO">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Nav_Drawer_Style" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:backgroundTint">@color/lc3</item>
        <item name="itemTextColor">@color/lc4</item>
        <item name="itemIconTint">@color/lc1</item>
    </style>
    <style name="NAV_Header_Style">
        <item name="android:background">@drawable/navheadbg</item>
    </style>
    <color name="BOTTOM_NAV_ICON_checked">
        @color/lc4
    </color>
    <color name="BOTTOM_NAV_ICON_unchecked">
        @color/lc3
    </color>
</resources>