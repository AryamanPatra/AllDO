<resources>
    <!-- Base application theme. -->
    <style name="Theme.AllDO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lc2</item>
        <item name="colorPrimaryVariant">@color/lc1</item>
        <item name="colorOnPrimary">@color/lc3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lc4</item>
        <item name="colorSecondaryVariant">@color/lc2</item>
        <item name="colorOnSecondary">@color/lc3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="datePickerCustomStyle" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:font">@font/lexend</item>
        <item name="colorAccent">@color/lc4</item>
        <item name="android:headerBackground">@color/lc4</item>
        <item name="android:textColorPrimaryInverse">@color/lc3</item>
        <item name="android:textColorSecondaryInverse">@color/lc2</item>
        <item name="background">@color/lc3</item>
        <item name="colorSurface">@color/lc3</item>
        <item name="colorButtonNormal">@color/lc4</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/buttonBarStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/buttonBarStyle</item>
    </style>
    <style name="buttonBarStyle">
        <item name="android:textColor">@color/lc1</item>
    </style>
    <style name="timePickerCustomStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimaryInverse">@color/lc3</item>
        <item name="android:textColorSecondaryInverse">@color/lc2</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/buttonBarStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/buttonBarStyle</item>
    </style>

    <!--  Light mode  -->
    <style name="SCREEN">
        <item name="android:background">@color/lc3</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/lc4</item>
    </style>
    <style name="FAB">
        <item name="android:backgroundTint">@color/lc1</item>
        <item name="android:tint">@color/lc3</item>
    </style>
    <style name="BOTTOMNAV">
        <item name="android:backgroundTint">@color/lc2</item>
    </style>
    <style name="TITLE">
        <item name="android:textColor">@color/lc4</item>
        <item name="android:shadowColor">@color/lc4</item>
    </style>
    <style name="NAV_MENU">
        <item name="android:tint">@color/lc4</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AllDO">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Nav_Drawer_Style" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:backgroundTint">@color/lc3</item>
        <item name="itemTextColor">@color/lc4</item>
        <item name="itemIconTint">@color/lc1</item>
    </style>
    <style name="NAV_Header_Style">
        <item name="android:background">@drawable/navheadbg</item>
    </style>
    <color name="c1">
        @color/lc1
    </color>
    <color name="c2">
        @color/lc2
    </color>
    <color name="c3">
        @color/lc3
    </color>
    <color name="c4">
        @color/lc4
    </color>
    <color name="TEXT_HINT">
        #B1201614
    </color>
</resources>