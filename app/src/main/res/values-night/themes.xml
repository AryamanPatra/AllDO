<resources>
    <!-- Base application theme. -->
    <style name="Theme.AllDO" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dc2</item>
        <item name="colorPrimaryVariant">@color/dc1</item>
        <item name="colorOnPrimary">@color/dc3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dc4</item>
        <item name="colorSecondaryVariant">@color/dc2</item>
        <item name="colorOnSecondary">@color/dc3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Dark mode  -->
    <style name="SCREEN">
        <item name="android:background">@color/dc3</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/dc1</item>
    </style>
    <style name="FAB">
        <item name="android:backgroundTint">@color/dc1</item>
        <item name="android:tint">@color/dc3</item>
    </style>
    <style name="BOTTOMNAV">
        <item name="android:backgroundTint">@color/dc2</item>
    </style>
    <style name="TITLE">
        <item name="android:textColor">@color/dc4</item>
        <item name="android:shadowColor">@color/dc4</item>
    </style>
    <style name="NAV_MENU">
        <item name="android:tint">@color/dc4</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AllDO">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Nav_Drawer_Style" parent="Widget.Design.NavigationView">
        <item name="android:fontFamily">@font/lexend</item>
        <item name="android:backgroundTint">@color/dc3</item>
        <item name="itemTextColor">@color/dc4</item>
        <item name="itemIconTint">@color/dc1</item>
    </style>
</resources>